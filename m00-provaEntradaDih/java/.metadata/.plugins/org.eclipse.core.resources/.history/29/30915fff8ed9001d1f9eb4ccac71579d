package dih;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Informe a distância da cidade para realizar a entrega: ");
		int hour = sc.nextInt();
		
		System.out.println(saudacao(hour));

	}
	
	public static String saudacao(int hour) {
		if (hour >= 0 && hour < 6) {
			return "Ja e madrugada. Descanse um pouco.";
		} else if (hour < 12) {
			return "Bom dia!";
		} else if (hour < 18) {
			return "Boa tarde!";
		} else {
			return "Boa noite!";
		}
	}
}
